{
  "repo_url": "git@github.com:grapeup/gu_cf_deployment.git",
  "repo_version": "master",
  "repo_private_key_var_name": "git_private_key",

  "pipelines": [
    {
      "name": "cf_deploy",
      "file": "ci/pipelines/azure/dev_pipeline.yml",
      "vars": [
        {"name": "trigger_on_repo_change", "value": "false"},
        {"name": "cf_bbr_release", "value": "cf-bbr/cf-bbr-1.0.0.tgz"}
      ]
    },
    {
      "name": "cf_backup",
      "file": "ci/pipelines/azure/backup_pipeline.yml",
      "vars": [
        {"name": "backup_interval", "value": "48h"}
      ]
    },
    {
      "name": "cf_restore",
      "file": "ci/pipelines/azure/restore_pipeline.yml"
    }
  ],

  "vars": [
    {"name": "cf_backup_bucket_name", "value": "backups.cflab.grapeup.com"},
    {"name": "cf_backup_bucket_region", "fortress_var": "s3_region"},
    {"name": "cf_backup_s3_access_key", "fortress_var": "s3_access_key"},
    {"name": "cf_backup_s3_secret_key", "fortress_var": "s3_secret_key"},
    
    {"name": "backend", "value":"azure"}
  ]
}
