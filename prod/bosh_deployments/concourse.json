{
    "repo_url": "git@github.com:grapeup/gu_concourse_deployment.git",
    "repo_version": "master",
    "repo_private_key_var_name": "git_private_key",

    "pipelines": [
        {
            "name": "deploy_concourse",
            "file": "ci/pipelines/dev_pipeline.yml",
            "vars": [
                {"name": "trigger_on_repo_change", "value": "false"},
                {"name": "concourse_bbr_release", "value": "concourse-bbr/concourse-bbr-1.0.0.tgz"}
            ]
        },
        {
            "name": "backup_concourse",
            "file": "ci/pipelines/backup_pipeline.yml",
            "vars": [
                {"name": "backup_interval", "value": "48h"}
            ]
        },
        {
            "name": "restore_concourse",
            "file": "ci/pipelines/restore_pipeline.yml",
            "vars": []
        }
    ],

    "vars": [
        {"name": "concourse_backup_bucket_name", "value": "backups.devops.cflab.grapeup.com"},
        {"name": "concourse_backup_bucket_region", "value": "eu-central-1"},
        {"name": "concourse_backup_s3_access_key", "fortress_var": "aws_access_key"},
        {"name": "concourse_backup_s3_secret_key", "fortress_var": "aws_secret_key"}
    ]
}
